{
  "name": "@charrue/weapp",
  "version": "0.0.1",
  "private": true,
  "author": "ckangwen",
  "license": "MIT",
  "miniprogram": "lib",
  "description": "小程序 UI 组件库",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "watch": "node ./scripts/watch.js"
  },
  "lint-staged": {
    "*.{ts,js}": [
